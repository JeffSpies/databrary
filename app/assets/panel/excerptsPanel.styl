// styles

.panel-excerpts-player-frame
	background orange52
	border-radius b4 b12 b12 b12
	padding f8

	.tool
		float right

	a
		color inherit

	img
	video
		margin-bottom 0
		width 100%
		height auto
		display block

.panel-excerpts-player-heading
	font-weight normal
	margin-top 0
	font-line 1
	font-size 1
	padding-left f8

	img
		width auto
		float left
		margin-right f6
		margin-top f6

.panel-excerpts-list
	figure
		background-color mix(orange51, white, 10%)
		margin-bottom 0
		cursor pointer
		size 109px
		border-radius b8

.panel-excerpts-binder
	background-color orange51
	transition transition-def
	padding f8 f1 f8 f8
	margin-bottom f1
	border-radius b12
	position relative

.panel-excerpts-list-current
	background-color orange52

.panel-excerpts-icon
	position relative
	cursor pointer

.panel-excerpts-video-overlay
	display none

	.video &
		display block
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		background url('/public/images/overlay-video.png') no-repeat center center
		background-size contain
		opacity f2

.panel-excerpts-actions
	float right
	position absolute
	width 16px
	top 0
	right b3

.panel-excerpt-filetype-thumb
	size f23