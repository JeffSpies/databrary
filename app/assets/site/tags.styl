// styles

.panel-tags-list
  form
    display inline

.panel-tags-items
  padding 0
  display inline

.panel-tags-item
  font-line 1 1.25
  height b1 + b4
  display inline-flex
  margin-right f2
  margin-bottom b3
  border-radius b1
  border 1px solid pale
  padding-width f3
  
  &.active
    background-color blue51

  &:before
    display none

  .panel-tag-weight
    position relative
    font-weight bold
    float left
    background green51
    border-radius b3
    margin-right f4
    margin-top f4
    margin-bottom f4
    min-width b1
    font-line f34 f23
    text-align center

  .panel-tag-controls
    position relative
    float left
    margin-left f4

  .panel-tag-name
    position relative
    float left
    height b1
    top -b12

  .panel-tag-vote
    arrow = b4
    able = orange
    hover = orange42
    active = orange52
    disabled = green
    position relative
    margin 0
    padding 0
    background transparent
    line-height b2
    box-shadow none

    &.null
      color transparent
      height 1px
      width 9px
      border 2px solid able
      margin-top 11px
      margin-bottom 5px

      &:hover
        border-color hover

      &:active
        border-color active

      &[disabled]
        border-color disabled

    &.up
      hide-text()
      border-color transparent
      border-width arrow
      border-style solid
      top -10px
      border-bottom arrow solid able

      &:hover
        border-bottom arrow solid hover

      &:active
        border-bottom arrow solid active

      &[disabled]
        border-bottom arrow solid disabled

    &[disabled]
      &:hover
        background-image none

    &:focus
      outline 0

.panel-tags-new-form
  position relative
  width 10

  input
    z-index 100
    position relative
    width 6
    border none
    box-shadow none
    background none
    margin 0

.keyword::before
  content "*"