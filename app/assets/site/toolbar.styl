// styles

body
  .main
    margin-top 1.5

.toolbar
  top 0
  z-index 1000
  position fixed
  width 100%
  height 1.5
  line-height 1.5
  box-shadow box-shadow-def
  background-color white
  font-family heading-family

  .row
    position relative

  .icon
  .toolbar-avatar
    position relative
    top b8
    margin-left b3
    margin-right b8

.toolbar-site
  font-line 1 1.5
  margin-height 0
  display inline-block

  a
    color black
    display block
    background url('/public/images/logo/databrary-nav.svg') no-repeat 0 center
    background-size 114px 24px 
    height 1.5
    @media screen and (max-width: grid-mobile-width)
        width 21px
        margin-right f3
    @media screen and (min-width: grid-mobile-width + 1)
        width 114px
        margin-right f2

    &:link
      color black

    &:hover
      color blue52


.toolbar-nav
  display inline-block
  position relative
  vertical-align top

  li
    margin-right f2

  a
    position relative
    top -b24
    font-line .75 .75
  a.button
    text-transform lowercase

    .icon
      position relative
      top b12

.toolbar-avatar
  display inline-block
  border 1px solid gray
  size b34

.toolbar-nav,
.toolbar-user,
.toolbar-hover
  a
    color black

    &:hover
      color gray

      .avatar
        border-color pale

    &.toolbar-superuser
      color red53

      &:hover
        color red51

      &.on
        color green53

        &:hover
          color green51

img.toolbar-hover-avatar
  width 96px    

.toolbar-user
  font-size 0.8em
  text-align right
  position relative
  float right
  padding-right 1.8%

  form
    display inline-block

.toolbar-search
  display inline-block
  position relative

.toolbar-hover
  position absolute
  top b1 * 2
  right b1
  background-color white
  border-radius b6
  box-shadow box-shadow-def
  padding f2
  line-height 1

  /*
  &:after,
  &:before
    content ""
    position absolute
    right b1 + b12
    size 0
    border b4 solid transparent
    pointer-events none

  &:after
    border-bottom-color white
    top -b2

  &:before
    border-bottom-color gray
    top -b2 - 1px
*/

.toolbar-user-menu
  text-align right
  width inherit
  float left

  ul
    padding-left 0
    margin-bottom 0

.toolbar-password-form
  border-top 1px solid gray
  padding-top f4
  margin-top f4

  .password
    margin-bottom 0

.toolbar-static-input
  width 50px

.user-icon
  float right
  padding 3px

.search-form
  padding-top 1
  padding-bottom 2

.search-form-search
  input[type="search"]
    max-width 16
    margin-bottom 0
    padding b2

    @media screen and (max-width: 550px)
      width 4
    @media screen and (min-width: 551px)
      width 7

.hover-nav-bg
  background-color neutral51

.toolbar-hidden-navs
  top 0
  z-index 1001
  position fixed
  width 100%
  height 1.5
  line-height 1.5
  background-color neutral51
  font-family heading-family
  .icon
    position relative
    top b8
    margin-left b3
    margin-right b8