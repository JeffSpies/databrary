.home-logo
  margin 0
  margin-top 1
  float left
  line-height 3

  a
    color black
  div
    font-size 0.8em
    line-height 100%
    display block
    vertical-align middle

.home-feature
  margin-bottom 3

.home-feature-inner
  position relative

.home-feature-thumb
  width 100%
  cursor pointer

.home-feature-info
  position absolute
  background white
  box-shadow box-shadow-def
  padding f6 f3

  width auto
  top auto
  bottom b1 * -2
  right b1
  left b1

  h1
    font-line f34

    a
      link-color black

.home-feature-message
  font-weight bold
  text-transform uppercase
  color gray
  font-line f90 1
  display inline-block

.home-feature-investigators
  font-size f90

  ul
    margin-top 0
    display inline-block

    li
      display inline-block
      margin-right f6

      &:after
        content ', '

      &:last-child
        &:after
          content none

.home-parties
  margin-bottom 3

.home-parties-header
  font-line 1.25 2
  letter-spacing 1px
  
  font-weight normal
  text-transform uppercase
  margin 0 2 f1 0
  padding-right f1
  display inline-block
  background-color orange52
  position relative
  text-shadow -1px 0 2px orange51

  span.background
    background-color orange52
    position absolute
    left -50px
    right 0px
    top 0
    bottom 0
    z-index -100

.home-party
  margin-bottom f1
  transition transition

  &:hover
    box-shadow box-shadow-def

  img
    display block
    cursor pointer
    width 100%
    max-width none

  .info
    padding f6 f3
    text-align center

    a
      color black

      &:hover
        color gray

  h1
    font-line 1

  .affiliation
    color gray

.home-tags
  padding-left b1
  font-size 0.8em

.home-bigbuttons
  background-color orange51
  position relative
  width 100%
  margin-left 0
  margin-right 0
  margin-bottom b1*2
  padding 0
  div.bigbuttons-container
    position relative
    margin-right auto
    margin-left auto
    width 685px
    div.bigbutton
      text-align center
      position relative
      width 180px
      height 150px
      margin b1
      padding b3
      padding-top b1
      border-radius b3
      border 1px solid orange52
      background-color white
      display inline-table
      box-shadow 0px 3px 3px -3px black
      transition background-color 0.2s
      
      span.button-title
        display block
        font-weight 700
      span:not(.button-title)
        color orange53
        font-size 0.8em
    div.bigbutton:hover
      background-color rgba(250,250,250,0.9)
      