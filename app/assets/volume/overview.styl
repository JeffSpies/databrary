// styles
.volume-view
  .panel-overview-volume
    margin-top 1.5

    span.download{
            margin-right b4
            margin-top 1
    }

  .panel-overview-volume-header
    position relative
    padding-bottom 1
    margin-bottom 2
    padding-top 1

    .panel-title
      margin-bottom 0
      text-shadow -1px 0 2px blue51

  .panel-overview-volume-header-fill
    position absolute
    top 0px
    bottom 0
    z-index -1
    background-color blue52
    box-shadow box-shadow-def

  .panel-overview-volume-type
    font-line 1.5, 1
    font-family heading-family
    margin-bottom b4

    .icon
      position relative
      top b8

    span
      display inline-block

  .panel-overview-volume-thumb
    max-width none
    width 100%
    margin-bottom f1

  .panel-overview-volume-citation
    padding-left 2
    text-indent b1 * -2
    margin-bottom f2
    text-align left

  .panel-overview-volume-reuses
    padding 0

    li
      &:before
        display none

    img
      size f23
      position relative
      top 1px

  .panel-overview-volume-funds
    margin-bottom f2

