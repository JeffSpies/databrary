 // styles

.vem-float
  height 2
  margin-bottom 1
  width 100%

.vem-float-floater
  transition box-shadow trans-time trans-ease

.vem-float-floater:not(.float)
  height 2
  padding-top b3
  width 100%

.vem-float-progress
  background-color white

.vem-float-dropzone
  border-radius b1
  border 1px solid gray
  box-shadow inset 0 0 b4 pale
  float left
  margin-right b8
  height b1 + b2
  padding-width b6
  padding-top b8
  text-align center
  transition background trans-time trans-ease
  overflow hidden 
  white-space nowrap
  text-overflow ellipsis
  width 80%
  @media screen and (max-width:grid-tablet-width)
    width 65%
  @media screen and (max-width:584px)
    width 30%

  &.over-zone
    background-color green51

  .icon
    position relative
    top b12

.vem-float-dropzone-message
  position relative
  top -b6
  padding-right b6

.vem-trash
  vertical-align middle 

.vem-repeat
  position relative
  border-bottom-width 0
  padding-bottom 0

.vem-repeat-content
  margin-left f2
  input
    margin-bottom b2

.vem-file-dropzone
  @extend input
  transition background trans-time trans-ease

  &.over-form
    background-color yellow51

  &.over-zone
    background-color green51

.file-button-set
  position relative
  float right
  top -45px
  right 0px