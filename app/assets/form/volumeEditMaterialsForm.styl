// styles

.vem-float
  height 2
  margin-bottom 1
  overflow hidden

.vem-float-floater
  height 2
  padding-height b3
  width 100%
  background-color white
  transition box-shadow trans-time trans-ease

  &.float
    position fixed
    top b1 * 1.5
    z-index 10
    box-shadow 0 0 b3 white

.vem-float-dropzone
  border-radius b6
  border 1px solid gray
  box-shadow inset 0 0 b4 pale
  float left
  margin-right b8
  height b1 + b4
  padding-width b6
  transition background trans-time trans-ease

  &.over-form
    background-color yellow51

  &.over-zone
    background-color green51

  .icon
    position relative
    top b12

.vem-float-dropzone-message
  position relative
  top -b6
  padding-right b6

form fieldset
  .drop-zone
     border 2px solid black
     &.over-form
     	border 4px solid black
     &.over-zone
     	border 4px solid green
  .file-thumb
     height 50px
     width 50px
  .trash
     border 2px solid black
  .trashable
     border 2px solid black
