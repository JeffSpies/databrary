// styles

.vem-float
  height 2
  margin-bottom 1

.vem-float-floater
  height 2
  padding-height b3
  width 100%
  background-color white
  transition box-shadow trans-time trans-ease

  &.float
    position fixed
    top b1 * 1.5
    z-index 10
    box-shadow 0 0 b3 white

.vem-float-dropzone
  border-radius b6
  border 1px solid gray
  box-shadow inset 0 0 b4 pale
  float left
  margin-right b8
  height b1 + b4
  padding-width b6
  transition background trans-time trans-ease
  overflow hidden 
  white-space nowrap
  text-overflow ellipsis

  &.over-form
    background-color yellow51

  &.over-zone
    background-color green51

  .icon
    position relative
    top b12

.vem-float-dropzone-message
  position relative
  top -b6
  padding-right b6

.vem-trash
  width 1.5

@media screen and (min-width: grid-mobile-width) and (max-width: (grid-tablet-width - 1))
  grid(mobile, grid-mobile-spread, grid-column, grid-gutter)
  .vem-float-dropzone
    &.drop-zone
      width 5

@media screen and (min-width: grid-tablet-width) and (max-width: (grid-laptop-width - 1))
  grid(tablet, grid-tablet-spread, grid-column, grid-gutter)
  .vem-float-dropzone
    &.drop-zone
      width 11

.vem-repeat
  position relative

.vem-repeat-grip
  position absolute
  top b2
  left 0
  bottom b2
  width b1
  border-radius b1
  border 1px solid yellow31
  draggable()

.vem-repeat-gripper
  position absolute
  left b8 + b12
  width b2
  margin-top -b1
  top 50%
  height 2
  border-radius b1
  border 1px solid gray

.vem-repeat-content
  margin-left 1.5

.vem-file-dropzone
  @extend input
  transition background trans-time trans-ease

  &.over-form
    background-color yellow51

  &.over-zone
    background-color green51
