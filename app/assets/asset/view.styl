.download-popup
  position relative
  min-height 100%
  left 0
  right 0
  margin 0 auto
  padding b2
  padding-bottom b1*2
  background-color white
  border b1*1.5 solid green52
  text-align center
  .icon.close
    position absolute
    top 0
    right 0
    size b1*2
    margin 0
  .icon.close:not(:hover)
    background-color white
  .popup-thumb,a.button
    margin b1
    margin-bottom b2
  .view-link
    display inherit
    text-align justify
  p
    margin b1 b2

.popup-thumb
  box-shadow box-shadow-def

.popup-classification-title
  font-weight bold
  color red

.popup-file-info
  a
    color green
  h3
    word-break break-all
  h3,h4,span
    margin-top 3
  ul
    padding 0
  li
    display inline-block
  li:before
    content none
  li:not(:last-of-type)
    margin-right b2

.popup-format-icon
  height b1*1.25
  width auto
  margin-right b3

.popup-classification
  border-top 1px solid green51
  padding-top b1
  margin-top b2

.popup-classification > ul
  text-align justify

.popup-cite
  p
    text-align center
    font-size b2
    
.download-list
  position relative
  margin b2
  padding-left 0
  text-align justify
  li
    border-top 1px solid neutral51
    padding-top b8
    padding-bottom b8
  li:last-of-type
    border-bottom 1px solid neutral51
  li:before
    content none