// styles

textarea
	resize vertical
	height auto
	overflow-x hidden
	overflow-y auto
	min-height 6

select[multiple],
select[size]
	min-height 6
	height auto

input,
select
	line-height 1

input,
textarea,
select
	color black
	font-family body-family
	box-sizing border-box
	border-padding-height f4 1px
	padding-width f3
	border-radius b8
	width 100%
	border 1px solid gray
	margin-bottom f2
	transition border, outline, color, background, padding, margin, box-shadow .15s linear
	box-shadow inset-shadow
	placeholder gray

	&:focus
		border-color green
		input-shadow green

		&.ng-invalid:not(.ng-pristine)
			border-color red
			input-shadow red

	&.mini
		border-padding-bottom f12 1px
		font-line f90 f34
		padding-width f8

	&.half
		width 50%

	&.third
		width 100% / 3

	&.quarter
		width 25%

input
	&[type="search"]
		border-radius b1*4
		padding-width f2
		box-sizing border-box

	&[type="file"]
		display block
		background-color white
		border-padding-top f4 1px

	&[type="date"]
		border-padding-height f4 1px

	&[type="radio"],
	&[type="checkbox"]
		margin f6 0 0
		line-height inherit
		width auto
		display inline-block
		box-shadow none

		&:focus
			box-shadow outset-shadow
			outline 0

select
	border-padding-bottom f4 0

input,
select,
textarea,
option,
fieldset
	&:disabled
		border-color pale
		color pale
		cursor default

th, td
	input, select
		margin-bottom 0