// styles

button, .button
	display inline-block
	text-shadow 0 0 2px fade-out(white, 25%)
	line-height 1
	border-padding-height f4 1px
	padding-width f2
	border-radius b8
	color black
	margin-right f8
	button-color neutral

	&.red
		button-color red

	&.orange
		button-color orange

	&.yellow
		button-color yellow

	&.green
		button-color green

	&.blue
		button-color blue

	&.purple
		button-color purple

	&:disabled, &.disabled
		disabled-background = linear-gradient(top, mix(gray, white, 75%), mix(gray, white, 50%))
		border 1px solid gray
		background disabled-background
		cursor default

		&:hover
			background disabled-background

		&:active
			background disabled-background

	&.mini
		border-padding-height f8 1px
		padding-width f4

	&.pull
		position relative
		float right
		top (b1 * -2) + b8
		right 0
		margin-bottom f1 * -2

// link button

a.button
	&:link, &.link,
	&:visited, &.visited,
	&:hover, &.hover,
	&:active, &.active
		color black

// button link

button.link
	border none
	background inherit
	display inline
	padding 0
	margin 0
	transition transition
	color red
	font inherit
	outline none
	outline-offset 0
	text-shadow none
	border-radius 0

	&:hover
		color black
