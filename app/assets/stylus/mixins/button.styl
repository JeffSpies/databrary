// mixins

button-color(color)
	border 1px solid mix(color, gray, 75%)
	background linear-gradient(top, mix(color, white, 25%), mix(color, white, 50%))

	&:hover
		background linear-gradient(top, mix(color, white, 50%), mix(color, white, 25%))

	&:active
		background linear-gradient(top, mix(color, white, 50%), mix(color, white, 75%))