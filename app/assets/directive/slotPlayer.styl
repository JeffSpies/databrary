// styles

.player-main
  width 100%
  background white
  padding b4
  box-shadow box-shadow-def
  text-align center

  .slot-media
    display inline-block
    margin 0 auto

.player-main-info
  text-align left

  &.playable
    border-top 1px solid pale
    padding-top b4
    margin-top b4


.player-main-info-actions
  float right
  margin-top b8

.player-main-info-name
  font-line 1.5 1
  margin-bottom b4

.player-main-info-list
  margin-bottom 0

  .icon
    position relative
    top b12

  dt
    float left
    clear left
    width 150px

    &:after
      content ':'

  dd
    float left
    margin-left b6

.player-main-info-link
  link-color orange
  display inline-block