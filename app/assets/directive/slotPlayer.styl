// styles

.slot-player
  margin-bottom b4

.player-main
  width 100%
  background white
  padding b4
  box-shadow box-shadow-def
  text-align center
  position relative

  .slot-media
    display inline-block
    margin 0 auto

  &:hover
    .player-main-float
      opacity 1

.player-main-float
  position absolute
  top b1
  left b1
  right b1
  opacity 0
  transition opacity trans-time trans-ease
  background white
  box-shadow box-shadow-def

.player-main-info
  text-align left
  height 4.25
  border-top 1px solid pale
  padding-height b4
  margin-top b4


.player-main-info-actions
  float right
  margin-top b8

.player-main-info-name
  font-line 1.5

.player-main-info-list
  margin-bottom 0

  .icon
    position relative
    top b12

  dt
    float left
    clear left
    width 150px

    &:after
      content ':'

  dd
    float left
    margin-left b6

.player-main-info-link
  link-color orange
  display inline-block