<?xml version="1.0" encoding="UTF-8" ?>
<schema name="databrary" version="1.5">
  <field name="_version_" type="long" indexed="true" stored="true"/>
  <field name="_root_" type="string" indexed="true" stored="false"/>

  <field name="content_type" type="string" indexed="true" stored="true"/>
  <field name="id" type="string" indexed="true" stored="true" required="true"/>
  <uniqueKey>id</uniqueKey>

  <field name="text_en" type="text_en" indexed="true" stored="false" multiValued="true"/>
  <field name="text_gen" type="text_general" indexed="true" stored="false" multiValued="true"/>
  <field name="text_rev" type="text_general_rev" indexed="true" stored="false" multiValued="true"/>

  <field name="name" type="text_ws" indexed="true" stored="true" multiValued="true"/>
  <copyField source="name" dest="text_en"/>
  <copyField source="name" dest="text_gen"/>
  <copyField source="name" dest="text_rev"/>

  <field name="party_id" type="id"/>
  <field name="party_pre_name" type="text_ws" indexed="true" stored="true"/>
  <copyField source="party_pre_name" dest="name"/>
  <copyField source="party_pre_name" dest="text_en"/>
  <copyField source="party_pre_name" dest="text_gen"/>
  <copyField source="party_pre_name" dest="text_rev"/>
  <field name="party_sort_name" type="text_ws" indexed="true" stored="true"/>
  <copyField source="party_sort_name" dest="name"/>
  <copyField source="party_sort_name" dest="text_en"/>
  <copyField source="party_sort_name" dest="text_gen"/>
  <copyField source="party_sort_name" dest="text_rev"/>
  <field name="party_affiliation" type="text_ws" indexed="true" stored="true"/>
  <copyField source="party_affiliation" dest="text_en"/>
  <copyField source="party_affiliation" dest="text_gen"/>
  <copyField source="party_affiliation" dest="text_rev"/>
  <field name="party_has_account" type="boolean" indexed="true" stored="true"/>
  <field name="party_authorization" type="permission" indexed="true" stored="true"/>

  <field name="volume_id" type="id"/>
  <field name="body" type="text_en" indexed="true" stored="true"/>
  <copyField source="body" dest="text_en"/>
  <copyField source="body" dest="text_gen"/>
  <copyField source="body" dest="text_rev"/>
  <field name="volume_owner_ids" type="id" indexed="true" stored="true" multiValued="true"/>
  <field name="volume_owner_names" type="text_ws" indexed="true" stored="true" multiValued="true"/>
  <copyField source="volume_owner_names" dest="text_en"/>
  <copyField source="volume_owner_names" dest="text_gen"/>
  <copyField source="volume_owner_names" dest="text_rev"/>
  <field name="citation" type="text_ws" indexed="true" stored="true"/>
  <copyField source="citation" dest="text_en"/>
  <copyField source="citation" dest="text_gen"/>
  <copyField source="citation" dest="text_rev"/>
  <field name="citation_url" type="string" indexed="true" stored="true"/>
  <field name="citation_year" type="int" indexed="true" stored="true" />
  <copyField source="citation_year" dest="text_en"/>
  <copyField source="citation_year" dest="text_gen"/>

  <field name="container_id" type="id"/>
  <field name="container_top" type="boolean" indexed="true" stored="true"/>
  <field name="container_date" type="daterange" indexed="true" stored="true"/>
  <field name="release" type="release" indexed="true" stored="true"/>
  <field name="segment" type="string" indexed="false" stored="true"/>
  <field name="segment_duration" type="tdouble" indexed="true" stored="false"/>

  <field name="asset_id" type="id"/>
  <field name="format_id" type="id" indexed="true" stored="true"/>

  <field name="record_id" type="id"/>
  <field name="record_category_id" type="id" indexed="true" stored="true"/>
  <field name="record_age" type="tint" indexed="true" stored="true"/>

  <field name="record_text_*" type="text_ws" indexed="true" stored="true"/>
  <copyField source="record_text_*" dest="text_en"/>
  <copyField source="record_text_*" dest="text_gen"/>
  <copyField source="record_text_*" dest="text_rev"/>
  <field name="record_long_*" type="text_en" indexed="true" stored="true"/>
  <copyField source="record_long_*" dest="text_en"/>
  <copyField source="record_long_*" dest="text_gen"/>
  <copyField source="record_long_*" dest="text_rev"/>
  <field name="record_enum_*" type="string" indexed="true" stored="true" omitNorms="false"/>
  <copyField source="record_enum_*" dest="text_en"/>
  <copyField source="record_enum_*" dest="text_gen"/>
  <copyField source="record_enum_*" dest="text_rev"/>
  <field name="record_numeric_*" type="tdouble" indexed="true" stored="true"/>
  <field name="record_date_*" type="tdate" indexed="true" stored="true"/>
  <field name="record_void_*" type="boolean" indexed="true" stored="true"/>

  <field name="tag_id" type="id"/>
  <field name="tag_name" type="string" indexed="true" stored="true" omitNorms="false"/>
  <copyField source="tag_name" dest="text_en"/>
  <copyField source="tag_name" dest="text_gen"/>
  <copyField source="tag_name" dest="text_rev"/>
  <field name="keyword" type="string" indexed="true" stored="true" omitNorms="false"/> <!-- same as tag, but for boosting -->


  <fieldType name="id" class="solr.TrieIntField" precisionStep="0" indexed="true" stored="true"/>
  <fieldType name="permission" class="solr.EnumField" enumsConfig="enum.xml" enumName="permission"/>
  <fieldType name="release" class="solr.EnumField" enumsConfig="enum.xml" enumName="release"/>

  <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
  <fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="tint" class="solr.TrieIntField" precisionStep="8" positionIncrementGap="0"/>
  <fieldType name="tfloat" class="solr.TrieFloatField" precisionStep="8" positionIncrementGap="0"/>
  <fieldType name="tlong" class="solr.TrieLongField" precisionStep="8" positionIncrementGap="0"/>
  <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" positionIncrementGap="0"/>
  <fieldType name="date" class="solr.TrieDateField" precisionStep="0" positionIncrementGap="0"/>
  <fieldType name="tdate" class="solr.TrieDateField" precisionStep="6" positionIncrementGap="0"/>
  <fieldType name="daterange" class="solr.DateRangeField"/>

  <fieldType name="binary" class="solr.BinaryField"/>
  <fieldType name="random" class="solr.RandomSortField" indexed="true" />

  <fieldType name="text" class="solr.TextField" positionIncrementGap="1"/>

  <fieldType name="text_ws" class="solr.TextField" positionIncrementGap="1">
    <analyzer>
      <tokenizer class="solr.WhitespaceTokenizerFactory"/>
    </analyzer>
  </fieldType>

  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>

  <fieldType name="text_en" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.NGramFilterFactory" minGramSize="3" maxGramSize="15"/>
      <filter class="solr.SynonymFilterFactory" synonyms="index_synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.StopFilterFactory"
              ignoreCase="true"
              words="stopwords.txt"
              />
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.EnglishPossessiveFilterFactory"/>
      <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
      <filter class="solr.LengthFilterFactory" min="3" max="100"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.StopFilterFactory"
              ignoreCase="true"
              words="stopwords.txt"
              />
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.EnglishPossessiveFilterFactory"/>
      <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
      <filter class="solr.LengthFilterFactory" min="3" max="100"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
  </fieldType>

  <fieldType name="text_en_splitting" class="solr.TextField" positionIncrementGap="100" autoGeneratePhraseQueries="true">
    <analyzer type="index">
      <tokenizer class="solr.WhitespaceTokenizerFactory"/>
      <filter class="solr.StopFilterFactory"
              ignoreCase="true"
              words="stopwords.txt"
              />
      <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0" splitOnCaseChange="1"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.WhitespaceTokenizerFactory"/>
      <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.StopFilterFactory"
              ignoreCase="true"
              words="stopwords.txt"
              />
      <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="0" catenateNumbers="0" catenateAll="0" splitOnCaseChange="1"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
  </fieldType>

  <fieldType name="text_general_rev" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.ReversedWildcardFilterFactory" withOriginal="true"
         maxPosAsterisk="3" maxPosQuestion="2" maxFractionAsterisk="0.33"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>

</schema>
