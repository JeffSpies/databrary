# UPDATE    ?segment=
POST    /api/slot/$containerId<[0-9]+>                                                            controllers.SlotApi.update(containerId : models.Container.Id, segment : dbrary.Segment)
# DELETE
#                                                                                                 TODO: DELETE /api/slot/containerId<[0-9]+>

# ----- RECORD ----- #
