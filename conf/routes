# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                      		controllers.Application.start

GET     /login                      	controllers.Login.login
POST    /Login                 		controllers.Login.postLogin
GET     /OpenID                     	controllers.Login.openID(username = "")
GET     /OpenID/:username           	controllers.Login.openID(username : String)
GET	/logout				controllers.Login.logout

GET	/home			   	controllers.Account.home
POST	/Account			controllers.Account.postAccount
POST	/Authorize			controllers.Account.postAuthorize

GET     /DDL                        	controllers.Application.ddl

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
