# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                      		controllers.Application.start

GET     /login                      	controllers.Login.login
POST    /Login                 		controllers.Login.loginPost
GET     /OpenID                     	controllers.Login.openID(username = "")
GET     /OpenID/:username           	controllers.Login.openID(username : String)
GET	/logout				controllers.Login.logout

GET	/entity/:id			controllers.Entity.view(id : Int)

GET	/account			controllers.Account.admin
POST	/Account			controllers.Account.accountChange
POST	/Trust/:child			controllers.Account.trustChange(child : Int)
POST	/Trust/:child/add		controllers.Account.trustAdd(child : Int)
# should be POST but currently used as link:
GET	/Trust/:child/delete		controllers.Account.trustDelete(child : Int)
GET	/Trust/search			controllers.Account.trustSearch

GET     /DDL                        	controllers.Application.ddl

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
