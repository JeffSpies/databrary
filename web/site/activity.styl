.activity
  padding-left 0
.activity > li
  padding-width b3
  &:nth-child(even)
    background-color white
  &:nth-child(odd)
    background-color neutral52
  
  dl > dt, dl > dd
    display inline-block
    
  dl, dt
    display inline-block
  
  dd
    margin-width b3
    
.activity-timestamp
  float right
  
.activity-old
  color red
  
.activity-new
  color green

.activity-asset-highlight
  padding-width b8