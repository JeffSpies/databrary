.activity > li
  &:nth-child(even)
    background-color neutral51
  &:nth-child(odd)
    background-color neutral53
  
  dl > dt, dl > dd
    display inline-block
    
  dl, dt
    display inline-block
    
.activity-timestamp
  float right
  
.activity-old
  background-color red
  
.activity-new
  background-color green
