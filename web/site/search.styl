  float left
  select
    appearance none
    min-width 150px
    width auto
    background-color white
    border red 1px solid
    

.search-select,
.search-input
  display inline-block
  width auto
  margin-right b2
  @media screen and (max-width: grid-mobile-width)
    width 100%
    
.search-party-results
  .portrait
    padding b2
    
.search-volume-results
  padding b2
  h1
    font-size b1
    line-height b1 * 1.5
    text-indent -36px
    .icon
      width 36px
  ul
    padding-left 0
  li:before
    content none
    
.search-volume-results > li
  padding-bottom b3
  border-bottom green51 solid 3px
  margin-bottom b3
  
