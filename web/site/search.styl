.search-view
  margin-top 72px
.search-filter
  float left
  border-right 12px solid #e5e5e5
  font-size b2
  select
    min-width 150px
    width auto
    background-color white
    border red 1px solid
    
.search-select,
.search-input
  display inline-block
  width auto
  margin-right b2
  @media screen and (max-width: grid-mobile-width)
    width 100%

.search-results
  padding-left b1*1.5
   
.search-party-results
  padding-bottom b1
  border-bottom neutral dotted 1px
  .portrait
    padding b2
    
.search-volume-results
  padding b2
  h1
    font-size b1
    line-height b1 * 1.5
    text-indent -36px
    .icon
      width 36px
  ul
    padding-left 0
  li:before
    content none
    
.search-volume-results > li
  padding-bottom b3
  border-bottom green51 solid 3px
  margin-bottom b3
  
.search-volume-containers
  margin-top b3
  border-top neutral dotted 1px
  padding-top b3
  .search-volume-container
    box-shadow box-shadow
    border 0
    display inline-block

.search-volume-result-keywords
  font-size b2
  color neutral13
  ul > li:first-of-type:before
    content none