// we want this to be on the same line with the party name, and not eat space below it. WIP (jc)
.access-grant-form >.ng-invalid-required
  .access-grant-radioset
    background-color red51
    border-radius b8

.access-grant-remove
  margin-left b2
  margin-top b8
  z-index 1
  vertical-align top

.access-grant-radioset
  position relative
  z-index 0

.access-grant-text
  width max-content

.access-grant-owner-order
  display inline-block
  margin-left b2
  height b1
  position relative
  background url('/web/icons/volume-access-rws.svg')
  background-position b8 center
  background-repeat no-repeat
  & > input
    background transparent
    width 3.5
    padding-left b1
    height b1
    font-size 0.7em
    line-height 24px
    text-align right
    vertical-align middle
